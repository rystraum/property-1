!!!
%html
  %head
    %title= yield(:title) || "Untitled"
    %meta{"http-equiv"=>"Content-Type", content: "text/html; charset=utf-8"}/
    = yield :head
    = stylesheet_link_tag "application"
    = javascript_include_tag "application" 
    = csrf_meta_tag
    

  %body( class="#{ params[:controller].parameterize }" )
    #outer_wrapper
      #outer_wrapper_top
      #inner_wrapper
        %header
          #logo
            = link_to "<span class='c'>Clear</span><span class='p'>Property</span>".html_safe, root_path
            %h1 For sale and for rent in the Philippines
          
          = render 'login'
          
        - unless flash.empty?
          #flash
            - flash.each do |name, msg|
              = content_tag :div, msg, class: name

            - if show_title?
              %h1= yield :title

        %content
          = yield
        
        - unless @sidebar == false
          %sidebar
            - unless @u
              %h2 Menu
              %ul
                %li= link_to "List your property for sale or rent", [:new, :listing]
            - else
              %h2
                - if @a
                  #{@g.name}
                - else
                  Menu
              %ul
                %li= link_to "New property", [:new, :listing]
                %li= link_to "Your properties", :listings
                %li= link_to "Agency properties", [@g, :listings]
          
              - if admin?
                %h3 Admin
                %ul
                  %li= link_to "Add a new agent", [:new, @g, :agent]
            %h2 Search
            %ul
              %li= link_to "All Properties", :properties
    %footer
      #footer_content
        Â© 2011 ClearProperty
      -# = yield :scripts
